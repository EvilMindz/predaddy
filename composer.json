{
    "name": "predaddy/predaddy",
    "description": "Common DDD classes and utilities",
    "license": "MIT",
    "keywords": ["ddd", "eventbus", "aggregate"],
    "authors": [
        {
            "name": "Janos Szurovecz",
            "homepage": "http://www.szjani.hu/"
        }
    ],
    "require": {
        "php": ">=5.4",
        "precore/precore": "~1.8",
        "doctrine/annotations": "~1.1",
        "doctrine/cache": "~1.0",
        "lf4php/lf4php": "~4.2",
        "trf4php/trf4php": "~1.1"
    },
    "require-dev": {
        "mf4php/mf4php": "~1.1",
        "satooshi/php-coveralls": "dev-master",
        "phpunit/phpunit": "~4.1",
        "lf4php/lf4php-log4php": "~2.1",
        "jms/serializer": "~0.15",
        "doctrine/cache": "1.3.1"
    },
    "autoload": {
        "psr-0": {"predaddy": "src/"}
    },
    "suggest": {
        "predaddy/predaddy-doctrine-orm": "Using Doctrine ORM to persist aggregates and events",
        "jms/serializer": "For serializing events and aggregates with JmsSerializer",
        "mf4php/mf4php": "Use it and one of its implementation if you want to use Mf4PhpMessageBus (asynchronous event handling)"
    }
}
